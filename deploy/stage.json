{
  "id": "/primer",
  "cpus": 0.5,
  "mem": 512,
  "portDefinitions": [
    {
      "port": 8080,
      "protocol": "tcp",
      "name": "http"
    },
    {
      "port": 8081,
      "protocol": "tcp",
      "name": "admin"
    }
  ],
  "requirePorts": true,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "docker.phonepe.com:5000/primer-service:0.0.1-SNAPSHOT",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0,
          "protocol": "tcp"
        },
        {
          "containerPort": 8081,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "privileged": false,
      "forcePullImage": true
    },
    "volumes": [
      {
        "containerPath": "/var/log/primer",
        "hostPath": "/var/log/primer",
        "mode": "RW"
      }
    ]
  },
  "env": {
    "CONFIG_ENV": "stage",
    "JAVA_PROCESS_MIN_HEAP": "512m",
    "JAVA_PROCESS_MAX_HEAP": "512m",
    "AEROSPIKE_HOST": "stg-aerospike001:3000",
    "AEROSPIKE_NAMESPACE": "primer",
    "AEROSPIKE_CONNECTION_PER_NODE": "5",
    "AEROSPIKE_TIMEOUT": "1000",
    "AEROSPIKE_RETRIES": "3",
    "AEROSPIKE_SLEEP_BETWEEN_RETRIES": "100",
    "JWT_PRIVATE_KEY": "TwhjV5ujkvb41frpmqCve7ZfhqwSDMqOXe01DeDIsb2xCrW4bwfFnax9bi2uC9Kn",
    "JWT_CLOCK_SKEW": "60",
    "JWT_EXPIRY": "3600",
    "ZK_CONNECTION_STRING" : "stg-mesosm001:2181"
  },
  "labels": {
    "traefik.portIndex": "0",
    "traefik.enable": "true"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/healthcheck",
      "gracePeriodSeconds": 3,
      "intervalSeconds": 10,
      "portIndex": 1,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "upgradeStrategy": {
    "minimumHealthCapacity": 0.5,
    "maximumOverCapacity": 0.2
  }
}